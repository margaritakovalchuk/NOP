mixin innnerArticle(data)
    each item in data
        .article__card.article__card_inner
            .d-flex
                .col-md-5
                    a(href!=`${item.href}`)
                        picture.card-img
                            source.img-fluid(srcset!= `${item.srcset}` type="image/webp")
                            img.img-fluid(src!= `${item.src}` alt!= `${item.title}`)
                .col-md-7
