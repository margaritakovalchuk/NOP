mixin navBar(data, isSorted)
    - data = isSorted ? data.sort(function (a, b) { return a.title < b.title ? -1 : 1; }) : data;
    ul.navigation-main__items
        each item in data
            if(item.active)
                li: span.active!= item.title
            else
                li: a(href=item.url): span!= item.title

mixin search
    .col-lg-1.col-md-2.ml-auto.order-3.order-lg-0.col-2.order-sm-2.d-flex.align-items-center
        button.navigation__search.my-auto(type="button")
            +svg('search')
    .search-wrapper.d-none
        .search-group
            form
                .input-group
                    input.form-control(type='text')
                    .input-group-append
                        button.btn.btn-search(type='button') Поиск
        p.no-results Нет результатов


mixin cardImageOverlay(data)
    each item in data
        .col-lg-3.col-md-6.mb-md-3
            a(href!=item.href)
                .card.card-trend
                    .card-img.trend__img(style=`background-image: url('${item.src}')`)
                    .card-img-overlay.d-flex.align-items-center
                        p.card-title.text-center!= item.title

mixin cardsLastTests(data)
    .card-deck
        each item in data
            .col-lg-4
                .card.card-article
                    .card-img__wrapper
                        picture.card-img-top
                            source.img-fluid(srcset!= `${item.srcset}` type="image/webp")
                            img.img-fluid(src!= `${item.src}` alt!= `${item.title}`)
                        span.badge.card-badge!=item.badge
                    .card-body
                        a(href!=`${item.href}`)
                            .card-title
                                p!= item.title

