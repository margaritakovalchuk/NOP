mixin svg(name)
    svg(class!= `${name}`)
        use(xlink:href="img/symbol/svg/sprite.svg#" + name)

mixin footerArticles(data)
    p.article__title Read also
    ul.article__cards
        each item in data
            a(href!=item.href)
                li.article__card.d-lg-flex
                    .row
                        .col-lg-4
                            picture.card__img
                                source.img-fluid(srcset!= `${item.srcset}` type="image/webp")
                                img.img-fluid(src!= `${item.src}` alt!= `${item.title}`)
                        .col-lg-8
                            p.card__title!= item.title

